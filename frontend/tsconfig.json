{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "Node",
    "baseUrl": "src",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "types": [
      "jest",
      "node"
    ],
    "strict": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "src",
    "__tests__",
    "vite.config.ts"
  ],
  "exclude": [
    "tsconfig.json",
    "node_modules"
  ]
}
