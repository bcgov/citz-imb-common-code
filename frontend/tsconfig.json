{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "types": [
      "@testing-library/jest-dom",
      "jest",
      "node"
    ],
    "strict": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "__tests__",
    "vite.config.ts"
  ],
  "exclude": [
    "tsconfig.json",
    "node_modules",
    "build",
    "coverage"
  ]
}
