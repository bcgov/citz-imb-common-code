{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "Node",
    "baseUrl": "src",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "types": ["jest", "node"],
    "strict": true
  },
  "include": ["src", "__tests__"],
  "exclude": ["tsconfig.json", "node_modules"]
}
